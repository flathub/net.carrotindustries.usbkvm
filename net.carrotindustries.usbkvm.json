{
    "app-id": "net.carrotindustries.usbkvm",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.golang"
    ],
    "command": "usbkvm",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=all",
        "--filesystem=xdg-run/pipewire-0:ro"
    ],
    "cleanup": [
        "*.a",
        "*.la",
        "/include",
        "/lib/*/*.h",
        "/lib/atkmm-1.6",
        "/lib/cairomm-1.0",
        "/lib/gdkmm-3.0",
        "/lib/giomm-2.4",
        "/lib/glibmm-2.4",
        "/lib/gtkmm-3.0",
        "/lib/oce-0.18",
        "/lib/pangomm-1.4",
        "/lib/pkgconfig",
        "/lib/cmake",
        "/lib/sigc++-3.0",
        "/lib/sigc++-2.0",
        "/share/devhelp",
        "/share/doc",
        "/share/pkgconfig"
    ],
    "modules": [
        "gtkmm.json",
        {
            "name": "usbkvm",
            "buildsystem": "meson",
            "build-options" : {
                "prepend-path": "/usr/lib/sdk/golang/bin"
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/carrotIndustries/usbkvm/releases/download/v0.3.1/usbkvm-v0.3.1.tar.gz",
                    "sha256": "2986c2e2d0a543526899b10bc75c989ee5409c2975ccbe49bbaeb6a2036199b7"
                }
            ]
        }
    ]
}
